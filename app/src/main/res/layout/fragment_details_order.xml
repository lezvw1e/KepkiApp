<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.details_order.DetailsOrderFragment">

    <ImageView
        android:id="@+id/img_back"
        android:padding="@dimen/ten_dp"
        android:layout_margin="@dimen/thirty_dp"
        android:src="@drawable/ic_chevronleft"
        android:background="@drawable/bg_orders"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_details_order"
        android:layout_marginTop="@dimen/thirty_two_dp"
        android:layout_marginStart="@dimen/twenty_dp"
        android:textSize="@dimen/twenty_eight_sp"
        android:fontFamily="@font/s_f_u_i_text_bold"
        android:textColor="@color/black"
        android:text="@string/details_orders"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginTop="@dimen/forty_dp"
        android:padding="@dimen/twelve_sp"
        android:background="@drawable/bg_card"
        android:id="@+id/cv_photo"
        app:layout_constraintStart_toStartOf="@id/txt_details_order"
        app:layout_constraintTop_toBottomOf="@id/txt_details_order"
        android:src="@drawable/img3"
        android:layout_width="80sp"
        android:layout_height="80sp"/>


    <TextView
        android:id="@+id/txt_name"
        android:textSize="@dimen/sixteen_sp"
        android:textColor="@color/black"
        android:fontFamily="@font/s_f_u_i_text_bold"
        android:layout_marginStart="@dimen/twelve_dp"
        app:layout_constraintTop_toTopOf="@id/cv_photo"
        app:layout_constraintStart_toEndOf="@id/cv_photo"
        android:text="@string/new_era"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_icon"
        android:textColor="@color/black"
        android:fontFamily="@font/s_f_u_i__text_regular"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintStart_toStartOf="@id/txt_name"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        android:text="@string/golden_state_warriors_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_id_name"
        android:textColor="@color/black"
        android:fontFamily="@font/s_f_u_i__text_regular"
        android:textSize="@dimen/twelve_sp"
        android:text="@string/_59fifty_fitted_cap"
        app:layout_constraintTop_toBottomOf="@id/txt_icon"
        app:layout_constraintStart_toStartOf="@id/txt_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/twenty_dp"
        android:fontFamily="@font/s_f_u_i_text_bold"
        android:text="@string/_2500"
        android:textColor="@color/yellow"
        android:textSize="@dimen/sixteen_sp"
        app:layout_constraintBottom_toBottomOf="@id/cv_photo"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginHorizontal="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/forty_sp"
        app:layout_constraintTop_toBottomOf="@id/txt_price"
        android:backgroundTint="@color/gray"
        android:background="@drawable/bg_bestsellers"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:paddingVertical="8dp"
            android:id="@+id/txt_id"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:fontFamily="@font/s_f_u_i_text_bold"
            android:textSize="16sp"
            tools:text="89475934"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_date_order"
            android:paddingVertical="8dp"
            android:fontFamily="@font/s_f_u_i__text_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen_sp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_id"
            android:text="@string/date_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_date_of_order"
            android:fontFamily="@font/s_f_u_i_text_bold"
            android:textSize="@dimen/sixteen_sp"
            android:textColor="@color/black"
            tools:text="03.06.2021"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/txt_date_order"
            app:layout_constraintTop_toTopOf="@id/txt_date_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:paddingVertical="8dp"
            android:id="@+id/txt_date_sent"
            android:fontFamily="@font/s_f_u_i__text_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen_sp"
            android:text="@string/date_sent"
            app:layout_constraintTop_toBottomOf="@id/txt_date_order"
            app:layout_constraintStart_toStartOf="@id/txt_date_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_date_of_sent"
            android:fontFamily="@font/s_f_u_i_text_bold"
            android:textSize="@dimen/sixteen_sp"
            android:textColor="@color/black"
            tools:text="03.06.2021"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/txt_date_sent"
            app:layout_constraintTop_toTopOf="@id/txt_date_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_address"
            android:paddingVertical="8dp"
            android:fontFamily="@font/s_f_u_i__text_regular"
            android:textSize="@dimen/sixteen_sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/txt_date_sent"
            app:layout_constraintStart_toStartOf="@id/txt_date_sent"
            android:text="@string/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textAlignment="textEnd"
            app:layout_constraintStart_toEndOf="@id/txt_id"
            android:id="@+id/txt_of_address"
            android:fontFamily="@font/s_f_u_i__text_regular"
            android:textSize="@dimen/sixteen_sp"
            android:textColor="@color/black"
            tools:text="г. Бишкек 8 мкрн, дом 12 кв 47"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>