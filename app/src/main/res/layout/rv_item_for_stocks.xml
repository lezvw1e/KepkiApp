<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginEnd="@dimen/sixteen_dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_model"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_bestsellers"
        android:padding="@dimen/twenty_dp"
        android:src="@drawable/img3"
        android:layout_width="@dimen/one_hundred_fifty_dp"
        android:layout_height="@dimen/one_hundred_fifty_dp"/>

    <TextView
        android:layout_marginTop="@dimen/ten_dp"
        android:fontFamily="@font/s_f_u_i_text_bold"
        android:textColor="@color/black"
        android:id="@+id/txt_name_model"
        app:layout_constraintStart_toStartOf="@id/img_model"
        app:layout_constraintTop_toBottomOf="@id/img_model"
        android:textSize="@dimen/twelve_sp"
        android:text="@string/adidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/txt_desc_model"
        android:layout_marginTop="@dimen/four_dp"
        app:layout_constraintStart_toStartOf="@id/txt_name_model"
        app:layout_constraintTop_toBottomOf="@id/txt_name_model"
        android:textSize="@dimen/ten_sp"
        android:text="@string/san_francisco_baseball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="SmallSp" />


    <TextView
        android:layout_marginStart="@dimen/four_dp"
        app:layout_constraintTop_toTopOf="@id/txt_price_before_stock"
        app:layout_constraintBottom_toBottomOf="@id/txt_price_before_stock"
        app:layout_constraintStart_toEndOf="@id/txt_price_before_stock"
        android:id="@+id/txt_price_model"
        android:fontFamily="@font/s_f_u_i_text_bold"
        android:textSize="@dimen/fourteen_sp"
        android:textColor="@color/yellow"
        android:text="@string/summa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/ic_like"
        app:layout_constraintTop_toTopOf="@id/txt_name_model"
        app:layout_constraintEnd_toEndOf="@id/img_model"
        android:layout_width="@dimen/eighteen_dp"
        android:layout_height="@dimen/eighteen_dp"/>


    <TextView
        android:id="@+id/txt_price_before_stock"
        android:fontFamily="@font/s_f_u_i_text_bold"
        android:textSize="@dimen/twelve_sp"
        app:layout_constraintStart_toStartOf="@id/txt_desc_model"
        app:layout_constraintTop_toBottomOf="@id/txt_desc_model"
        android:text="@string/_4600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/dark_gray"
        app:layout_constraintBottom_toBottomOf="@id/txt_price_before_stock"
        app:layout_constraintTop_toTopOf="@id/txt_price_before_stock"
        app:layout_constraintEnd_toEndOf="@id/txt_price_before_stock"
        app:layout_constraintStart_toStartOf="@id/txt_price_before_stock"
        android:layout_width="0dp"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>